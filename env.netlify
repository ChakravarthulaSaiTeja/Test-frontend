# Netlify Environment Variables Template
# Copy this file to .env.local in your frontend directory and fill in your actual values

# OpenRouter Configuration (Alternative to OpenAI)
NEXT_PUBLIC_OPENROUTER_API_KEY=your_openrouter_api_key_here

# Market Data APIs
NEXT_PUBLIC_ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
NEXT_PUBLIC_NEWSAPI_KEY=your_newsapi_key_here

# Stock News Domains (comma-separated)
NEXT_PUBLIC_STOCK_NEWS_DOMAINS=seekingalpha.com,marketwatch.com,barrons.com,wsj.com,finance.yahoo.com

# Broker Configuration
NEXT_PUBLIC_BROKER_ENV=paper
NEXT_PUBLIC_BROKER_ACCOUNT_ID=your_broker_account_id_here

# MCP Broker Integration
NEXT_PUBLIC_MCP_BROKER_URL=wss://your-mcp-broker-url.com/mcp
NEXT_PUBLIC_MCP_BROKER_HTTP_URL=https://your-mcp-broker-url.com/api

# Backend API (use your deployed backend URL)
NEXT_PUBLIC_BACKEND_URL=https://your-backend-api.com

# App Configuration
NEXT_PUBLIC_APP_NAME=Forecaster AI
NEXT_PUBLIC_APP_URL=https://your-netlify-app.netlify.app

# NextAuth Configuration
NEXTAUTH_URL=https://your-netlify-app.netlify.app
NEXTAUTH_SECRET=your_nextauth_secret_here

# Database (if using direct connection - consider using a cloud database)
# DATABASE_URL=postgresql://username:password@your-db-host:5432/forecaster_db

# Redis (if using for caching - consider using a cloud Redis service)
# REDIS_URL=redis://your-redis-host:6379
